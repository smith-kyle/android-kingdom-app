<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.kylesmith.myriadmobilechallenge.controller.QuestSlidePageFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/kingdom_slider_image"
                android:layout_width="fill_parent"
                android:layout_height="300dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/kingdom_slider_name"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/kingdom_climate"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/kingdom_population"
                android:textSize="30dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
